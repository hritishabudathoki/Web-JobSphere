{
  "name": "jobsphere-backend",
  "version": "1.0.0",
  "description": "JobSphere Backend with Express.js and Sequelize",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node setup.js",
    "db:seed": "node -e \"import('./src/config/seeder.js').then(m => m.seedDatabase())\"",
    "db:reset": "node -e \"import('./src/config/database.js').then(({sequelize}) => sequelize.sync({force: true}).then(() => import('./src/config/seeder.js').then(m => m.seedDatabase())))\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2"
  },
  "keywords": [
    "express",
    "sequelize",
    "postgresql",
    "job-portal",
    "api"
  ],
  "author": "JobSphere Team",
  "license": "MIT"
} 